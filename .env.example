# ===========================================
# Titan Dashboard - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# --- Required ---

# MySQL connection string
DATABASE_URL=mysql://user:password@localhost:3306/titan_dashboard

# JWT secret for session cookies (use a strong random string, min 32 chars)
JWT_SECRET=

# LLM / Storage / Maps proxy (Forge API)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Email service (Resend)
RESEND_API_KEY=

# --- OAuth (required for login) ---

# Manus OAuth server URL
OAUTH_SERVER_URL=

# App ID for OAuth and URL generation
VITE_APP_ID=

# OAuth portal URL (used on the client for login redirect)
VITE_OAUTH_PORTAL_URL=

# --- Admin ---

# OpenID of the account that should have admin role
OWNER_OPEN_ID=

# --- Optional ---

# Server port (default: 3000)
PORT=3000

# Node environment
NODE_ENV=development

# Client-side Maps API proxy (exposed to browser)
VITE_FRONTEND_FORGE_API_URL=
VITE_FRONTEND_FORGE_API_KEY=

# Email sender (defaults to Doctor Lead Flow branding)
EMAIL_FROM_NAME=CEO Scaling Roadmap
EMAIL_FROM_ADDRESS=noreply@updates.doctorleadflow.com

# GoHighLevel webhook URL (pushes leads into GHL CRM pipeline)
GHL_WEBHOOK_URL=
